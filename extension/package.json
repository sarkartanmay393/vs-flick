{
    "name": "vs-flick",
    "displayName": "VS Flick",
    "description": "Control VS Code layout from your phone",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/example/vs-flick.git"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vs-flick.start",
                "title": "VS Flick: Start Server"
            },
            {
                "command": "vs-flick.stop",
                "title": "VS Flick: Stop Server"
            },
            {
                "command": "vs-flick.showMenu",
                "title": "VS Flick: Menu"
            }
        ],
        "configuration": {
            "title": "VS Flick",
            "properties": {
                "vs-flick.serverUrl": {
                    "type": "string",
                    "default": "http://localhost:3000",
                    "description": "URL of the VS Flick Relay Server"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "esbuild": "^0.27.2",
        "eslint": "^8.47.0",
        "socket.io-client": "^4.7.2",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "socket.io-client": "^4.7.2"
    }
}